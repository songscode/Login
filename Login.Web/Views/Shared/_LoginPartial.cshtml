@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            <a>你好，@(User.Identity.Name)</a>
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">注销</a></li>
        <li>@Html.ActionLink("重置", "ResetPassword", "Account", routeValues: null, htmlAttributes: new { id = "resetLoginLink" })</li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("注册", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("登录", "Logon", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
